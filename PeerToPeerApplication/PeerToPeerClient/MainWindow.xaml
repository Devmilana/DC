<Window x:Class="PeerToPeerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PeerToPeerClient"
        Title="Peer-to-Peer Client" Height="450" Width="800">
    <Grid Margin="10">
        <TextBox x:Name="PythonCodeTextBox" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="760" TextWrapping="Wrap" AcceptsReturn="True" FontSize="16"/>
        <Button Content="Load from File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="163" Margin="0,222,0,0" Click="LoadFromFileButton_Click" Height="40" FontSize="16"/>
        <Button Content="Submit Code" HorizontalAlignment="Left" VerticalAlignment="Top" Width="163" Margin="207,222,0,0" Click="SubmitCodeButton_Click" Height="40" FontSize="16"/>
        <Label Content="Job Status:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,284,0,0" Height="38" Width="141" FontSize="16"/>
        <TextBlock x:Name="JobStatusTextBlock" Text="Idle" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="102,289,0,0" Width="416" Height="31" FontSize="16"/>
        <Label Content="Jobs Completed:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,327,0,0" Width="141" Height="38" FontSize="16"/>
        <TextBlock x:Name="JobsCompletedTextBlock" Text="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="141,332,0,0" Height="37" Width="416" FontSize="16"/>
    </Grid>
</Window>
