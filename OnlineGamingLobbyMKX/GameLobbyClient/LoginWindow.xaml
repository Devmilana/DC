<UserControl x:Name="Login" x:Class="GameLobbyClient.LoginWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLobbyClient"
             mc:Ignorable="d" 
             Background="Black"
             Height="720" Width="1280">

    <Grid Margin="10,10,10,10" ClipToBounds="True">

        <Image Source="pack://application:,,,/Images/login2.png"
               Stretch="UniformToFill" 
               Panel.ZIndex="0" 
               Opacity="100" Margin="-872,-16,486,-16"/>

        <Image Source="pack://application:,,,/Images/logo1.png"
               Stretch="UniformToFill" 
               Panel.ZIndex="1" 
               Opacity="100" Margin="789,504,-10,-27"/>

        <Grid Panel.ZIndex="1" Margin="10,16,-10,-16" ClipToBounds="True">
            <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Margin="882,164,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="280" Height="40" FontSize="16" FontFamily="Consolas" FontWeight="Bold"/>
            <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="882,290,0,0" VerticalAlignment="Top" Width="280" Height="40"/>
            <Button Content="LOGIN" HorizontalAlignment="Left" Margin="941,382,0,0" VerticalAlignment="Top" Width="162" Click="Button_Click" Height="50" FontFamily="Consolas" FontWeight="Bold" FontSize="24"/>
            <Label x:Name="StatusLabel" HorizontalAlignment="Left" Margin="882,478,0,0" VerticalAlignment="Top" Height="45" Width="280" Foreground="White" FontFamily="Consolas" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="UsernameLabel" Content="USERNAME" HorizontalAlignment="Left" Margin="882,119,0,0" VerticalAlignment="Top" Width="280" Height="40" Foreground="White" FontFamily="Consolas" FontSize="22" FontWeight="Bold"/>
            <Label x:Name="PasswordLabel" Content="PASSWORD" HorizontalAlignment="Left" Margin="882,245,0,0" VerticalAlignment="Top" Height="40" Width="280" FontWeight="Bold" FontFamily="Consolas" FontSize="22" Foreground="White"/>
        </Grid>
    </Grid>
</UserControl>
